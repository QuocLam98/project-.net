    function validate() {

        var errorList = [];
        if ($("#healthFacility-name").val() == "") {
            errorList.push("Tên cơ sở không được để trống.");
        }
        if ($("#healthFacility-healthFacilityTypeId").val() == "" || $("#healthFacility-healthFacilityTypeId").val() == null) {
            errorList.push("Loại cơ sở y tế không được để trống.");
        }
        if ($("#healthFacility-healthFacilityStatusId").val() == "" || $("#healthFacility-healthFacilityStatusId").val() == null) {
            errorList.push("Trạng thái cơ sở y tế không được để trống.");
        }

        if (errorList.length > 0) {
            var contentError = "<ul>";
            errorList.forEach(function (item, index) {
                contentError += "<li class='text-start'>" + item + "</li>";
            })
            contentError += "</ul>";
            var actionName = (updatingItemId > 0 ? "Cập nhật" : "Thêm mới");
            var swalSubTitle = "<p class='swal__admin__subtitle'>" + actionName + " không thành công</p>";
            Swal.fire(
                'Quản lý cơ sở' + swalSubTitle,
                contentError,
                'warning'
            );
        } else {
            updateItem(updatingItemId);
        }
    }
