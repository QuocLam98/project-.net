                <span class="hamburger">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
                <span class="hamburger-cross">
                    <span></span>
                    <span></span>
                </span>
            </span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav menu ml-auto">
                <li class="nav-item dropdown submenu">
                    <a class="nav-link dropdown-toggle" href="/ve-chung-toi" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        HappyS
                    </a>
                </li>

                <li class="nav-item dropdown submenu">
                    <a class="nav-link dropdown-toggle" href="/trac-nghiem-suc-khoe-tam-than" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Trắc nghiệm Sức khỏe tâm thần
                    </a>
                </li>
                <li class="nav-item dropdown submenu">
                    <a class="nav-link dropdown-toggle" href="/dat-lich-tu-van-vien" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Đặt Lịch Tư Vấn
                    </a>
                </li>

                <li class="nav-item dropdown submenu">
                    <a class="nav-link dropdown-toggle" href="/dien-dan" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Diễn Đàn
                    </a>
                </li>
                <li class="nav-item dropdown submenu">
                    <a class="nav-link dropdown-toggle" href="/tin-tuc" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Tin Tức
                    </a>
                </li>
                <li class="nav-item dropdown submenu">
                    <a class="nav-link dropdown-toggle" href="/thu-vien" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Thư Viện
                    </a>
                </li>
            </ul>
            <div class="right-nav">
                @if (@ViewBag.AccountId != 0)
                {
                    <a class="nav_btn" href="/thong-tin-ca-nhan">@ViewBag.AccountName</a>
                }
                else
                {
                    <a class="nav_btn" href="/dang-nhap">Đăng nhập</a>
                }
