@{
    Layout = null;
}

<style>
    .list-created-forum-post {
        margin-right: 0px !important;
        margin-left: 0px !important;
    }

    .icon_check {
        color: green !important;
    }
    .icon_clock {
        color: orange !important;
    }
    .icon_error-circle_alt {
        color: red !important;
    }
</style>
<div class="tab-pane fade" id="createdForumPostHistory" role="tabpanel"
     aria-labelledby="createdForumPostHistory-tab">
    <div class="input-group search_forum" id="searchCreated">
        <input id="searchCreatedForumPost" type="text" class="form-control" placeholder="Tên bài đăng"
               aria-label="Recipient's username" aria-describedby="button-addon2">
        <div class="input-group-append" id="btnSearchCreatedForumPost">
            <button class="btn btn-outline-secondary" type="button">
                <i class="icon_search"></i>
            </button>
        </div>
    </div>
    <h2>Lịch sử bài đăng</h2>
    <div class="forum_l_inner">
        <div  class="list-created-forum-post row forum_head d-flex justify-content-between">
            <ul class="nav left">
                <li id="forum-post-status-accept"></li>
                <li id="forum-post-status-await"></li>
                <li id="forum-post-status-cancel"></li>
            </ul>
        </div>
        <div class="forum_body" id="forum_content">
            <ul id="createdForumPost" class="navbar-nav topic_list">
                <li>
                    <div class="media">
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <partial name="HappySmile/FrontEnd/_paginate" />

</div>
<script src="~/happys/js/page/userprofile/created_forum_post_history.js" asp-append-version="true"></script>


