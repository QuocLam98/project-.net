@{
    Layout = null;
}
<link rel="stylesheet" href="~/happys/css/createpost/createpost.css" />
<section class="create_post_section sec_pad_happys">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 form_left">
               @*  <div class="col-lg-12 p-0">
                    <div class="post_choose_photo d-flex align-items-center justify-content-center flex-column cursor-pointer">
                        <img src="~/happys/img/mountain 1.png" />
                        <input type="file" class="d-none" id="photo" accept="image/*">
                        <a class="btnShadow" id="btnUpload">Tải ảnh lên</a>
                    </div>
                </div> *@
                <div class="col-lg-12 mt-4 p-0">
                    <input type="text" class="form-control-hs" id="post-title" placeholder="Tiêu đề bài viết">
                </div>
                <div class="col-lg-12 mt-4 p-0">
                    <div class="post_category d-flex flex-column gap16px">
                        <select id="category_select">

                        </select>
                        @* <input type="text" class="form-control-hs" id="post-title" placeholder="Chọn chủ đề"> *@
                    </div>
                </div>
                <div class="col-lg-12 mt-3 p-0">
                    <textarea id="postContent" style="display: none; visibility: hidden;" class="form-control form-control mb-3 mb-lg-0 text_editor"></textarea>
                    <input type="file" class="d-none" id="postUpload"/>
                </div>
            </div>
            <div class="col-lg-4 pl-5 pr-5 push_forum_post">
                <div class="form_right">
                    <button class="btn btnHS2 w-100 " id="btnSubmit">Đăng bài</button>
                    <label for="confirm" class="d-flex flex-row align-items-center justify-content-center mt-2">
                        <input class="input_checkbox" name="hideaccount" id="confirm" type="checkbox" value="@SystemConstant.FORUM_POST_TYPE_INCOGNITO">
                        <span>Ẩn thông tin của bạn với người dùng khác</span>
                    </label>
                
                    <div class="post_hashtag d-none flex-column gap16px">
                        <h2>Hashtag</h2>
                        <div class="form-group">
                            <select class="form-control-hs select2 w-100" multiple id="tag" placeholder="Nhập hashtag">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<partial name="_FileExplorer_Client" />
<script src="~/happys/js/page/createpost.js" asp-append-version="true"></script>
<script src="~/happys/assets/ckeditor/ckeditor.js" asp-append-version="true"></script>
