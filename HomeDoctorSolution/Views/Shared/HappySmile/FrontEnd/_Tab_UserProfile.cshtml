@{
    Layout = null;
}
<link rel="stylesheet" href="/happys/css/user-profile/profile.css">
<div class="tab-pane fade show active" id="profile" role="tabpanel"
     aria-labelledby="profile-tab">
    <div class="profile_info">
        <div class="row p_info_item_inner d-none">
            <div class="col-sm-3">
                <div class="p_info_item_happys">
                    <img src="/happys/img/forum/author-1.jpg" alt="">
                </div>
            </div>
            <div class="col-sm-9 d-flex align-items-end">
                <div class="p_upload_item">
                    <form id="form_change_avatar">
                        <p>
                            Tải hình ảnh dạng JPEG, PNG,....
                            >= 1mb
                        </p>
                        <input type="file" class="d-none" id="avatar" accept="image/*" />
                        <button type="button" class="btn btnHS" id="btnUpload">Tải ảnh lên</button>
                    </form>

                </div>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col-lg-6">
                <label class="title-input">Họ và tên</label>
                <input type="text" class="input" id="fullname">
            </div>
            <div class="col-lg-6">
                <label class="title-input">Email</label>
                <input type="text" class="input" id="email">
            </div>
            <div class="col-lg-6">
                <label class="title-input" for="gender">
                    Giới tính
                </label>
                <select class="select2 w-100" id="gender">
                    <option value="0">Chọn</option>
                    <option value="MALE">Nam</option>
                    <option value="FEMALE">Nữ</option>
                </select>
            </div>
            <div class="col-lg-6">
                <label class="title-input">Ngày sinh</label>
                <div class="input-group date datepicker">
                    <input type="text" value="" class="input" id="dob" required="">
                </div>
            </div>
            <div class="col-lg-6">
                <label class="title-input">Tên lớp</label>
                <input type="text" class="input" id="class" readonly>
            </div>
            <div class="col-lg-6">
                <label class="title-input">Tên Trường</label>
                <input type="text" class="input" id="school" readonly>
            </div>
            <div class="col-lg-12">
                <label class="title-input">Địa chỉ</label>
                <input type="text" class="input" id="address">
            </div>
          @*   <div class="col-lg-12 mt-3 mb-3">
                <label for="confirm" class="d-flex flex-row">
                    <input class="input_checkbox" id="confirm" type="checkbox">
                    <span>Ẩn thông tin của bạn với người dùng khác</span>
                </label>
            </div> *@
            <div class="col-lg-12 mt-3 mb-3">
                <button type="button" class="btn btnHS" id="btnSave">Sửa</button>
            </div>
        </div>
    </div>
</div>
<script src="~/happys/js/page/userprofile/profile.js" asp-append-version="true"></script>
