@{
    Layout = null;
}
<link rel="stylesheet" href="/happys/css/signin/signin.css">
<div class="body_wrapper">
    <section class="signup_area">
        <div class="row ml-0 mr-0">
            <div class="sign_left signin_left d-flex flex-column justify-content-between">
                <div class="signin_left_top d-flex flex-column align-items-center">
                    <img src="/happys/img/logo/logo-b.png" />
                    <p>Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
                </div>
                <div class="signin_left_bottom">
                    <img src="/happys/svg/girl-square.svg" class="w-100" />
                </div>
            </div>
            <div class="sign_right signup_right">
                <div class="sign_inner signup_inner">
                    <div class="text-center">
                        <h3>Đăng nhập</h3>
                        <div class="card card-sign text-left">
                            <div class="card-sign-item">
                                <label for="select">
                                    Sở GD & ĐT
                                </label>
                                <select class="select_formgroup" id="select">
                                    <option value="0">Sở Giáo dục và đào tạo Hà Nội</option>
                                </select>
                            </div>
                            <div class="card-sign-item">
                                <label for="room">
                                    Phòng GD&ĐT
                                </label>
                                <select class="select_formgroup" id="room">
                                    <option value="0">Trường THPT ABC</option>
                                </select>
                            </div>
                            <div class="card-sign-item">
                                <label for="school">
                                    Trường học
                                </label>
                                <select class="select_formgroup" id="school">
                                    <option value="0">Trường ABC</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-flex flex-row login_social align-items-center justify-content-center">
                            <a href="#" class="btn-google d-flex flex-row align-items-center"><img src="/happys/img/signup/gmail.png" alt=""><span class="btn-text">Đăng nhập bằng Gmail</span></a>
                            <a href="#" class="btn-google d-flex flex-row align-items-center"><img src="/happys/img/signup/facebook.png" alt=""><span class="btn-text">Đăng nhập bằng Facebook</span></a>
                        </div>
                    </div>
                    <div class="sign_up_container">
                        <div class="divider">
                            <span class="or-text">hoặc</span>
                        </div>
                        <form class="row login_form">
                            <div class="col-lg-12 form-group">
                                <div class="small_text">Tên đăng nhập</div>
                                <input type="email" class="form-control" id="username" placeholder="Nhập tên đăng nhập">
                            </div>
                            <div class="col-lg-12 form-group">
                                <div class="small_text">Mật khẩu</div>
                                <div class="confirm_password">
                                    <input id="password" name="confirm-password" type="password" class="form-control" autocomplete="off" placeholder="Nhập mật khẩu">
                                    <div class="forget_btn">
                                        <i class="bi bi-eye-slash" id="toggle_password"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 form-group d-flex flex-row justify-content-between align-items-center">
                                <div class="d-flex flex-row justify-content-center align-items-center switch_container">
                                    <label class="switch">
                                        <input id="check_remember_password" type="checkbox">
                                        <span class="slider round"></span>
                                    </label>
                                    <span>
                                        <b>Nhớ mật khẩu</b>
                                    </span>
                                </div>
                                <div class="forward_password_container">
                                    <a href="#">
                                        <b>Quên mật khẩu</b>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <button type="button" id="btnLogin" class="btn btnHS">Đăng nhập</button>
                                <p>Chưa có tài khoản? <a href="/sign-up"><b>Đăng ký</b></a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
