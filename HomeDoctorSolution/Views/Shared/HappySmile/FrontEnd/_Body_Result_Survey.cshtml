        </div>
    </div>
  
</div>
<!--Begin Modal Share -->
<div class="modal fade " id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><i class='glyphicon glyphicon-envelope text-info'></i>Chia sẻ kết quả</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body d-flex justify-content-center">
                <div class="col-sm-6" >
                    <div class='form-group'>
                        <span id="email_error"></span>
                        <div class='input-group col-xs-8' data-validate="email">
                            <input type="text" class="form-control " name="validate-email" id="validate_email" placeholder="Email Address" required>
                            <span id="addEmail" class="input-group-addon primary">Ok</span>
                        </div>
                        <div id="list_email">
                            
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center" >
                <button type="button" class="btn btn-info" id="btnConfirmEmail">Gửi</button>
            </div>
        </div>
    </div>
</div>
<!--End Modal Share -->
