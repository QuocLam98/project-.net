@{
    Layout = null;
}

   <link rel="stylesheet" href="/HomeDoctor/css/sign-in/modal-signin.css" asp-append-version="true">  
<div class="modal fade" id="modal-signin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-signin-dialog " role="document">
        <div class="signin-modal modal-content">
            <div>
                    <div class="sign_right signup_right w-100 overflow-auto container p-0">
                        <div class="sign_inner signup_inner">
                            <div class="header-sign-inner">
                                <img style="height: 61px" src="/HomeDoctor/img/log_in/logo-white.png">
                            </div>
                            <div class="text-center w-100 sign-top">
                                <h3>Đăng nhập</h3>
                            </div>
                            <div class="sign_up_container">
                                <form class="row login_form">
                                    <div class="col-lg-12 form-group">
                                        <input type="email" class="form-control" id="username" placeholder="Tên đăng nhập">
                                    </div>
                                    <div class="col-lg-12 form-group m-0">
                                        <div class="form-group d-flex flex-row">
                                            <input id="password" name="confirm-password" type="password" class="form-control" autocomplete="off" placeholder="Mật khẩu">
                                            <div class="forget_btn">
                                                <i class="bi bi-eye-slash" id="toggle_password"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 form-group d-flex flex-row justify-content-center align-items-center">
                                        <div class="forward_password_container">
                                            <a href="/quen-mat-khau">
                                                <b>Quên mật khẩu</b>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 text-center d-flex flex-column gap-15px" style="margin-bottom: 20px;">
                                        <button type="button" id="btnLogin" class="btn btnHS2">Đăng nhập</button>
                                        <div class="or-text">
                                            Hoặc đăng nhập bằng
                                        </div>
                                        <div class="d-flex flex-row login_social align-items-center justify-content-center">
                                            <a href="#" class="btn-google d-flex flex-row align-items-center mt-0" id="login-width-facebook"><img src="/happys/img/facebook.png" alt=""></a>
                                            <a href="#" class="btn-google d-flex flex-row align-items-center mt-0" id="login-width-google"><img src="/happys/img/google.png" alt=""></a>
                                        </div>
                                        <p>Chưa có tài khoản? <a class="register" href="/sign-up"><b>Đăng ký</b></a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
  <script src="~/HomeDoctor/js/page/_login-modal.js" asp-append-version="true"></script>

 

