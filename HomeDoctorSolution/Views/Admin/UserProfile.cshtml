<script>
    var data = @Html.Raw(ViewBag.AccountJson);
    $("#btn_edit_profile").click(function () {
        $("#modal_admin_account").modal("show");
        $("#adminAccountFullName").val(data != null ? data.Name : "");
        $("#adminAccountEmail").val(data != null ? data.Email : "");
        $("#adminAccountPhone").val(data != null ? data.Phone : "");
        $("#adminAccountDescription").val(data != null ? data.Description : "");
    });
    $("#saveData").click(function () {
        let data = {
            name: $("#adminAccountFullName").val(),
            phone: $("#adminAccountPhone").val(),
            email: $("#adminAccountEmail").val(),
            description: $("#adminAccountDescription").val()
        };
        var fullName = $("#adminAccountFullName").val().split(" ");
        if (fullName.length > 0) {
            if (fullName.length > 3) {
                data.firstName = fullName.slice(0, 2).join(' ');
            } else {
                data.firstName = fullName.slice(0, 1).join(' ');
            }

            if (fullName.length > 2) {
                data.lastName = fullName.slice(-2, -1).join(' ');
                data.middleName = fullName.slice(-1).join(' ');
            } else {
                data.lastName = fullName.slice(-1).join(' ');
                data.middleName = "";
            }
        }
        Swal.fire({
            title: "Cập nhật thông tin tài khoản",
            html: "Bạn có chắc chắn muốn cập nhật thông tin tài khoản <b>" + $("#adminAccountFullName").val() + '</b>?',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#443',
            confirmButtonText: 'Xác nhận',
            cancelButtonText: 'Huỷ'
        }).then((result) => {
            if (result.value) {
                //call api
                $.ajax({
                    url: systemURL + "account/api/update-profile-admin",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(data),
                    beforeSend: function (xhr) {
                        if (localStorage.token) {
                            xhr.setRequestHeader('Authorization', 'Bearer ' + localStorage.token);
                        }
                    },
                    success: function (responseData) {
                        if (responseData.status == 200 && responseData.message === "SUCCESS") {
                            Swal.fire(
                                'Cập nhật tài khoản',
                                'Tài khoản <b>' + $("#adminAccountFullName").val() + '</b> đã được cập nhật thành công!',
                                'success'
                            );
                            $("#modal_admin_account").modal('hide');
                            regenData(responseData.data[0])
                        }
                    },
                    error: function (e) {
                        //console.log(e.message);
                        Swal.fire(
                            'Lỗi!',
                            'Đã xảy ra lỗi, vui lòng thử lại',
                            'error'
                        );
                    }
                });
            }
        });

    });
    function regenData(data) {
        $(".user_info_phone").text(data.phone);
        $(".user_info_fullName").text(data.name);
        $(".user_info_email").text(data.email);
        $(".user_info_description").text(data.description);
    }
    $("#btn_update_password").click(function() {
        let errors = [];
        let swalSubTitle = "<p class='swal__admin__subtitle'>Cập nhật không thành công!</p>";
        let data = {
            password: $("#oldPass").val(),
            newPassword: $("#newPass").val()
        }
        if (data.newPassword.trim() != $("#confirmNewPass").val().trim()) {
            errors.push("Xác nhận mật khẩu không trùng khớp. Vui lòng thử lại");
        }
        if (errors.length > 0) {
            let contentError = "<ul>";
            errors.forEach(function (item, index) {
                contentError += "<li class='text-start'>" + item + "</li>";
            })
            contentError += "</ul>";
            Swal.fire(
                '' + swalSubTitle,
                contentError,
                'warning'
            );
            return;
        }
        Swal.fire({
            title: "Bạn muốn cập nhật mật khẩu",
            html: "Bạn có chắc chắn muốn cập nhật mật khẩu tài khoản <b>" + $("#adminAccountFullName").val() + '</b>?',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#443',
            confirmButtonText: 'Xác nhận',
            cancelButtonText: 'Huỷ'
        }).then((result) => {
            if (result.value) {
                //call api
                $.ajax({
                    url: systemURL + "account/api/change-password",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(data),
                    beforeSend: function (xhr) {
                        if (localStorage.token) {
                            xhr.setRequestHeader('Authorization', 'Bearer ' + localStorage.token);
                        }
                    },
                    success: function (responseData) {
                        if (responseData.status == 200 && responseData.message === "SUCCESS") {
                            Swal.fire(
                                'Cập nhật tài khoản',
                                'Tài khoản <b>' + $("#adminAccountFullName").val() + '</b> đã được cập nhật mật khẩu thành công!',
                                'success'
                            );
                        }
                        else {
                            Swal.fire(
                                'Cập nhật thấy bại!',
                                'Mật khẩu cũ không đúng',
                                'error'
                            );
                        }
                    },
                    error: function (e) {
                        //console.log(e.message);
                        Swal.fire(
                            'Cập nhật thấy bại!',
                            'Mật khẩu cũ không đúng',
                            'error'
                        );
                    }
                });
            }
        });
    });
    $(document).ready(function () {
        $("#adminAccountPhoto").on("change-avatar", function () {
            var photoObj = {
                photo: $("#adminAccountPhoto").attr("src"),
            };
            $.ajax({
                url: systemURL + "account/api/change-avatar-admin",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(photoObj),
                beforeSend: function (xhr) {
                    if (localStorage.token) {
                        xhr.setRequestHeader('Authorization', 'Bearer ' + localStorage.token);
                    }
                },
                success: function (responseData) {
                    var profile = JSON.parse(localStorage.profile);
                    profile.photo = photoObj.photo;
                    localStorage.setItem("profile", JSON.stringify(profile));
                    $("#kt_header_user_menu_toggle img").attr("src", photoObj.photo);
                },
                error: function (e) {
                    //console.log(e.message);
                    Swal.fire(
                        'Lỗi!',
                        'Đã xảy ra lỗi, vui lòng thử lại',
                        'error'
                    );
                }
            });
        });
    });
</script>