@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body{
        font-family: Lexend;
    }
</style>

<div class="tab-pane fade" id="medicalinfo" role="tabpanel"
     aria-labelledby="medicalinfo-tab">
    <div class="medicalinfo_container">
        <div class="medicalinfo_body">
            <div class="medicalinfo_card">
                <div class="col-lg-12 card-title">
                    <h3>Thông tin cá nhân</h3>
                </div>
                <div class="col-lg-12">
                    <label class="title-input">Họ và tên</label>
                    <input type="text" class="input" id="medicalinfo-name" disabled readonly>
                </div>
                <div class="col-lg-12">
                    <label class="title-input">Ngày tháng năm sinh</label>
                    <div class="input-group date datepicker">
                        <input type="text" value="" class="input" id="medicalinfo-dob" required="" disabled readonly>
                    </div>
                </div>
                <div class="col-lg-12">
                    <label class="title-input" for="medicalinfo-gender" >
                        Giới tính
                    </label>
                    <input type="text" class="input" id="medicalinfo-gender" disabled readonly>
                </div>
                <div class="col-lg-12">
                    <label class="title-input" for="medicalinfo-phone">
                        Số điện thoại
                    </label>
                    <input type="text" class="input" id="medicalinfo-phone" readonly>

                </div>
            </div>
            <div class="medicalinfo_card col-xl-12">
                <div class="col-lg-12 card-title d-flex flex-row justify-content-between">
                    <h3>Thông tin sức khỏe</h3>
                </div>
                <div>
                    <div class="col-lg-12 col-xl-6">
                        <label class="title-input">Bệnh tim mạch</label>
                        <div class="radio-group">
                            <div class="check-box">
                                <input type="radio" id="radio_heartdiseasecard_yes" name="radio_heartdiseasecard" value="1">
                                <label for="radio_heartdiseasecard_yes">Có</label>
                            </div>
                            <div class="check-box">
                                <input type="radio" id="radio_heartdiseasecard_no" name="radio_heartdiseasecard" value="0">
                                <label for="radio_heartdiseasecard_no">Không</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-xl-6">
                        <label class="title-input">Bệnh Đái tháo đường</label>
                        <div class="radio-group">
                            <div class="check-box">
                                <input type="radio" id="diabetes_yes" name="diabetes" value="1">
                                <label for="diabetes_yes">Có</label>
                            </div>
                            <div class="check-box">
                                <input type="radio" id="diabetes_no" name="diabetes" value="0">
                                <label for="diabetes_no">Không</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-xl-6">
                        <label class="title-input">Hen phế quản</label>
                        <div class="radio-group">
                            <div class="check-box">
                                <input type="radio" id="asthma_yes" name="asthma" value="1">
                                <label for="asthma_yes">Có</label>
                            </div>
                            <div class="check-box">
                                <input type="radio" id="asthma_no" name="asthma" value="0">
                                <label for="asthma_no">Không</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-xl-6">
                        <label class="title-input">Động kinh</label>
                        <div class="radio-group">
                            <div class="check-box">
                                <input type="radio" id="epilepsy_yes" name="epilepsy" value="1">
                                <label for="epilepsy_yes">Có</label>
                            </div>
                            <div class="check-box">
                                <input type="radio" id="epilepsy_no" name="epilepsy" value="0">
                                <label for="epilepsy_no">Không</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="col-lg-12 col-xl-6">
                        <label class="title-input">Trầm cảm</label>
                        <div class="radio-group">
                            <div class="check-box">
                                <input type="radio" id="depression_yes" name="depression" value="1">
                                <label for="depression_yes">Có</label>
                            </div>
                            <div class="check-box">
                                <input type="radio" id="depression_no" name="depression" value="0">
                                <label for="depression_no">Không</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-xl-6">
                        <label class="title-input">Stress/ Căng thẳng</label>
                        <div class="radio-group">
                            <div class="check-box">
                                <input type="radio" id="stress_yes" name="stress" value="1">
                                <label for="stress_yes">Có</label>
                            </div>
                            <div class="check-box">
                                <input type="radio" id="stress_no" name="stress" value="0">
                                <label for="stress_no">Không</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-xl-6">
                        <label class="title-input">Rối loạn lo âu</label>
                        <div class="radio-group">
                            <div class="check-box">
                                <input type="radio" id="anxietydisorders_yes" name="anxietydisorders" value="1">
                                <label for="anxietydisorders_yes">Có</label>
                            </div>
                            <div class="check-box">
                                <input type="radio" id="anxietydisorders_no" name="anxietydisorders" value="0">
                                <label for="anxietydisorders_no">Không</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <label class="title-input">Mắc các bệnh khác (ghi rõ)</label>
                    <textarea type="text" class="input" id="medicalinfo-orther"></textarea>
                </div>
            </div>
            <div class="medicalinfo_card">
                <div class="col-lg-12 card-title d-flex flex-row justify-content-between">
                    <h3>Thể trạng</h3>
                    <div class="card-button">
                        @*<a class="btnEdit cursor-pointer" id="btn_update_medicalprofile">
                        Cập nhật
                        <img src="/happys/svg/pen-square.svg" />
                        </a>*@
                    </div>
                </div>
                <div class="col-lg-4">
                    <label class="title-input">Chiều cao (m)</label>
                    <div class="input-group">
                        <input type="text" class="input-value" maxlength="3" name="calculate" id="medicalinfo-height">
                        <span class="input-group-text">m</span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <label class="title-input">Cân nặng (kg)</label>
                    <div class="input-group">
                        <input type="text" class="input-value" maxlength="5" id="medicalinfo-weight" name="calculate">
                        <span class="input-group-text">kg</span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <label class="title-input">Chỉ số Bmi</label>
                    <div class="input-group">
                        <input type="text" class="input-value" id="medicalinfo-bmi">
                        <span class="input-group-text cursor-pointer" onclick="calculateBMI()">Tính toán</span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <label class="title-input">Nhóm máu</label>
                    <input type="text" class="input" id="medicalinfo-blood">
                </div>
                <div class="general-editing" id="general-editing">
                    <button class="btn btnHS" style="padding: 10px 115px;">Lưu lại</button>
                </div>
            </div>
            <div class="medicalinfo_card" id="medicalinfo_card_result">
                <div class="mental-health col-lg-12 card-title">
                    <h3>Sức khỏe tinh thần </h3>
                </div>
                @* <div class="result-servey col-lg-12 ">
                    Xem lại kết quả sàng lọc gần nhất
                </div> *@
                @* <div class="col-lg-6 mt-4">
                    <button id="survey-button" type="button" class="btn btnHS">
                        Tham gia sàng lọc sức khỏe
                    </button>
                </div> *@
            </div>
        </div>
    </div>
</div>
<script>
    var id = "@ViewBag.id"
</script>
<script src="~/happys/js/page/userprofile/profile.js" asp-append-version="true"></script>
<script src="~/happys/js/page/medical-profile-wv.js"></script>
<link href="~/happys/css/medical-info-wv.css" rel="stylesheet" />
<script>
    var getCookies = function () {
        var pairs = document.cookie.split(";");
        var cookies = {};
        for (var i = 0; i < pairs.length; i++) {
            var pair = pairs[i].split("=");
            cookies[(pair[0] + '').trim()] = unescape(pair.slice(1).join('='));
        }
        return cookies;
    }
    var myCookies = getCookies();
    localStorage.setItem("token", myCookies.Authorization);
</script>