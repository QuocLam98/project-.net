@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/happys/css/list-post.css" rel="stylesheet" />
<section class="doc_blog_grid_area sec_pad layout-list">
    <div class="container">
        <div class="row m-0">
            <div class="col-lg-9 col-12 p-0" id="result-post">
                <div class="row m-0 list-post" id="list-post">
                </div>
                <div class="col-auto">
                    <nav class="mt-32px mb-32px" aria-label="Posts list pagination">
                        <ul class="pagination pxp-pagination" id="pagination-post">
