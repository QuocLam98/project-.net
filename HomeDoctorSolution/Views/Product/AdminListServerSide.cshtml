    function loadData() {
        initTable();
    }
    function initTable() {
        table = $('#tableData').DataTable({
            processing: true,
            serverSide: true,
            paging: true,
            searching: { regex: true },
            order: [9, 'desc'],
            "oLanguage": {
                "sUrl": "/js/Vietnamese.json"
            },
            ajax: {
                url: systemURL + "product/api/list-server-side",
                type: "POST",
                contentType: "application/json",
                dataType: "json",
                data: function (d) {
                    d.searchAll = $("#search-input").val();
                    d.productCategoryIds = $("#filterProductCategoryId").val(); d.productBrandIds = $("#filterProductBrandId").val(); d.productTypeIds = $("#filterProductTypeId").val(); d.productStatusIds = $("#filterProductStatusId").val();
                    return JSON.stringify(d);
                }
            },
            columns: [
                {
                    data: 'id',
                    render: function (data, type, row, meta) {
                        var info = table.page.info();
                        var stt = meta.row + 1 + info.page * info.length;
                        return stt;
                    }
                },
                {
                    data: "photo",
                    render: function (data, type, row, meta) {
                        return "<img class='photo' id='row" + row.id + "-column-id' src='" + data + "'/>";
                    },
                },
                {
                    data: "name",
                    render: function (data, type, row, meta) {
                        return "<span id='row" + row.id + "-column-id'>" + data + "<span>";
                    },
                },
                {
                    data: "productStatusId",
                    render: function (data, type, row, meta) {
                        if (row.productStatusId == 1000003) {
                            return "<span  id='row" + row.id + "-column-id' class='badge py-3 px-4' style='color: #009ef7;background-color: #ccecfe;'>" + row.productStatusName + "<span>";
                        } else {
                            return "<span  id='row" + row.id + "-column-id' class='badge py-3 px-4' style='color: #ffffff;background-color: #dc3545;'>" + row.productStatusName + "<span>";

                        }
                    },
                },
                {
                    data: "productBrandId",
                    render: function (data, type, row, meta) {
                        return "<span id='row" + row.id + "-column-id'>" + row.productBrandName + "<span>";
                    },
                },
                {
                    data: "productTypeId",
                    render: function (data, type, row, meta) {
                        return "<span id='row" + row.id + "-column-id'>" + row.productTypeName + "<span>";
                    },
                },
                {
                    data: "productCategoryId",
                    render: function (data, type, row, meta) {
                        return "<span id='row" + row.id + "-column-id'>" + row.productCategoryName + "<span>";
                    },
                },
                {
                    data: "quantity",
                    render: function (data, type, row, meta) {
                        return "<span id='row" + row.id + "-column-id'>" + data + "<span>";
                    },
                },

                {
